# Server Configuration
SERVER_PORT=8083
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_HEADER_BYTES=1048576

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_PERIOD=1m
RATE_LIMIT_CLEANUP_AFTER=10m

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With,X-User-ID,X-User-Role,X-Access-Token
CORS_EXPOSE_HEADERS=
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=30
LOG_COMPRESS=true

# External Services Configuration
EXTERNAL_PAYMENT_SERVICE_URL=http://localhost:8082
EXTERNAL_NOTIFICATION_URL=http://localhost:8084
EXTERNAL_TIMEOUT=30s
EXTERNAL_RETRY_ATTEMPTS=3

# Auth Service Configuration
AUTH_USER_SERVICE_URL=http://localhost:8083
AUTH_VERIFY_ENDPOINT=/api/v1/auth/verify-token