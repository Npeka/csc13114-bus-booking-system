# Service Configuration
SERVICE_NAME=gateway-service

# Server Configuration
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_HEADER_BYTES=1048576

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=dev-jwt-refresh-secret-key-change-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h
JWT_ISSUER=bus-booking-system
JWT_AUDIENCE=bus-booking-users

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_PERIOD=1m
RATE_LIMIT_CLEANUP_AFTER=10m

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With,X-User-ID,X-User-Role,X-Access-Token
CORS_EXPOSE_HEADERS=
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=30
LOG_COMPRESS=true

# Internal Service URLs (Docker network)
USER_INTERNAL_URL=http://user-internal.cluster.local:8080
TRIPS_INTERNAL_URL=http://trips-internal.cluster.local:8081
BOOKINGS_INTERNAL_URL=http://bookings-internal.cluster.local:8082
PAYMENTS_INTERNAL_URL=http://payments-internal.cluster.local:8084
