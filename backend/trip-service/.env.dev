# Service Configuration
SERVICE_NAME=trip-service

# Server Configuration
SERVER_PORT=8081
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_HEADER_BYTES=1048576

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=trip_service_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL_MODE=disable
DATABASE_TIMEZONE=Asia/Ho_Chi_Minh
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300s
DATABASE_CONN_MAX_IDLE_TIME=60s
DATABASE_ENVIRONMENT=production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_POOL_SIZE=5
REDIS_MIN_IDLE_CONNS=1
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=60s
REDIS_READ_TIMEOUT=60s
REDIS_WRITE_TIMEOUT=60s

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=dev-jwt-refresh-secret-key-change-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h
JWT_ISSUER=bus-booking-system
JWT_AUDIENCE=bus-booking-users

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_PERIOD=1m
RATE_LIMIT_CLEANUP_AFTER=10m

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With,X-User-ID,X-User-Role,X-Access-Token
CORS_EXPOSE_HEADERS=
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=30
LOG_COMPRESS=true

# External Services Configuration
EXTERNAL_PAYMENT_SERVICE_URL=http://payment-service:8084
EXTERNAL_NOTIFICATION_URL=http://notification-service:8085
EXTERNAL_TIMEOUT=30s
EXTERNAL_RETRY_ATTEMPTS=3

# Firebase Configuration (Optional)
SERVICE_ACCOUNT_KEY_PATH=config/fbsvc.json
FIREBASE_DATABASE_URL=csc13114-bus-booking-system
